{
  "compilerOptions": { 
    "target": "es2017",                          
    "module": "commonjs",                     
    "allowJs": true,
    "resolveJsonModule": true,                    
    "outDir": "./build",                        
    "strict": false,                           
    "esModuleInterop": true,                  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "include": [
    "src/**/*.ts"
  ]
}
